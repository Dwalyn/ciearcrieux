{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block h1 %} {{ 'menu.login'|trans }} {% endblock %}

{% block content %}

        <form method="post">
            <div class="row">
                <div class="col"></div>
                <div class="col">
                    <div class="form-floating my-2">
                        <input type="email" name="_username" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput">{{ 'signin.email'|trans }}</label>
                    </div>
                    <div class="form-floating my-2">
                        <input type="password" name="_password" class="form-control" id="floatingPassword" placeholder="{{ 'signin.password'|trans }}">
                        <label for="floatingPassword">{{ 'signin.password'|trans }}</label>
                    </div>
                    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
                    {# See https://symfony.com/doc/current/security/remember_me.html #}

                    {# <div class="checkbox mb-3"> #}
                    {# <input type="checkbox" name="_remember_me" id="_remember_me"> #}
                    {# <label for="_remember_me">Remember me</label> #}
                    {# </div> #}
                    {# #}
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <button class="w-100 btn btn-lg btn-primary" type="submit">{{ 'signin.button'|trans }}</button>
                </div>
                <div class="col"></div>
            </div>
        </form>
{% endblock %}
