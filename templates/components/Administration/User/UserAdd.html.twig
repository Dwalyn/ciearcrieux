<div {{ attributes }}>
    {{ form_start(form, {
            attr: {
                novalidate: true,
                'data-action': 'live#action:prevent',
                'data-live-action-param': 'validForm',
            },
        })
    }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.email) }}
        {{ form_row(form.birthday) }}
        {{ form_row(form.role) }}
        {% if form.licenseNumber is defined %}
            {{ form_row(form.licenseNumber) }}
        {% endif %}
        <div>
            <button type="submit" class="btn btn-success"><i class="fa-solid fa-check"></i> {{ 'button.save'|trans }}</button>
            <a href="{{ path('admin_membersList') }}" class="btn btn-outline-secondary">{{ 'button.cancel'|trans }}</a>
        </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
