{% extends 'base.html.twig' %}

{% block title_page %}
    {{ parent() }} - {{ 'menu.members'|trans }}
{% endblock %}

{% block h1 %} {{ 'menu.members'|trans }} {% endblock %}

{% block content %}
    <div class="mb-3">
        <a class="btn btn-primary" href="{{ path('membersAdd') }}"><i class="fa-solid fa-user-plus"></i> Ajouter</a>
    </div>
    <table class="table table-hover table-responsive align-middle">
        <thead class="table-light">
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">License</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="table-hover">
            {% for user in users %}
                <tr>
                    <td>{{ user }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.licenseNumber }}</td>
                    <td>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" {% if user.isEnable %} checked {% endif %}>
                        </div>
                    </td>
                    <td><a class="btn btn-primary" href=""><i class="fa-solid fa-pen"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
