{% extends 'base.html.twig' %}

{% block title_page %}
    {{ parent() }} - {{ 'menu.members'|trans }}
{% endblock %}

{% block h1 %} {{ 'menu.members'|trans }} {% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">{{ 'h3.new_member'|trans }}</h3>
            {{ form_start(form) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.birthday) }}
                {{ form_row(form.licenseNumber) }}
                {{ form_row(form.role) }}
                <div>
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-check"></i> {{ 'button.save'|trans }}</button>
                    <a href="{{ path('admin_membersList') }}" class="btn btn-outline-secondary">{{ 'button.cancel'|trans }}</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
