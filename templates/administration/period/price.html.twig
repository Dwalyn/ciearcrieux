{% extends 'administration/period/base-period.html.twig' %}

{% block content %}

<div class="w-75">
    <div class="d-flex justify-content-between align-middle bd-highlight mb-3">
        <div>
            <h4 class="bd-highlight">{{ h1|trans }}</h4>
        </div>
        <div class="mt-2">
            <a href="{{ path('admin_periodPriceDetails', {id: licensePeriod.id}) }}"> <i class="fa-solid fa-arrow-left"></i>
                {{ 'button.back'|trans }}</a>
        </div>
    </div>

        {{ form_start(form) }}

        {% for widget in form.licensePriceFormDataCollection %}

            {% if field_errors(widget.price)|length %}
                {% set var_class = 'form-control is-invalid' %}
            {% else %}
                {% set var_class = 'form-control' %}
            {% endif %}
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">{{ widget.vars.data.type.translationKey|trans }} </span>
                    {{ form_widget(widget.price, {attr: {class: var_class}}) }}
                    <span class="input-group-text">â‚¬ / an</span>
                    {{ form_errors(widget.price) }}
                </div>
            </div>
        {% endfor %}

        <div>
            <button type="submit" class="btn btn-success"><i class="fa-solid fa-check"></i> {{ 'button.save'|trans }}</button>
            <a href="{{ path('admin_periodPriceDetails', {id: licensePeriod.id}) }}" class="btn btn-outline-secondary">{{ 'button.cancel'|trans }}</a>
        </div>
        {{ form_end(form) }}

</div>
{% endblock %}
